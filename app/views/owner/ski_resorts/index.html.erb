<div class="container">
  
  <div class="d-flex mt-5">
    <h2 class="col-7">経営スキー場一覧</h2>
    <%= link_to "スキー場を追加する", ski_resort_new_path, class:"btn btn-success col-2" %>
  </div>
  
  
  <div class="d-flex">
    <% @ski_resorts.each do |ski_resort| %>
      <div class="mt-5 mr-5">
        
        <%= link_to image_tag(ski_resort.image, size:"340x210"), owners_ski_resort_path(ski_resort) %><br>
        
        <h4 class="mt-3"><%= ski_resort.name %> (<%= ski_resort.prefecture.prefecture_name %>)</h4>
        
        <div class="mt-3", style="color: gray;">
          最終更新：<%= ski_resort.updated_at.strftime('%Y/%m/%d/%T') %>
        </div>
        
      </div>
    <% end %>
  </div>
</div>