<div class="container">
  
  <div class="d-flex mt-5">
      
    <%= image_tag @ski_resort.image, size: "480x310" %>
    
    <div class="ml-5">
      <h3><%= @ski_resort.name %> (<%= @ski_resort.prefecture_id %>県)</h3>
      
      <p class="mt-5"><%= @ski_resort.introduction %></p>
      
      <div class="d-flex mt-5">
        最終更新：<%= @ski_resort.updated_at.strftime('%Y/%m/%d/%T') %>
        
        <%= link_to "編集する", edit_ski_resort_path(@ski_resort), class:"btn btn-success ml-4" %>
      </div>
      
    </div>
  </div>
  
</div>