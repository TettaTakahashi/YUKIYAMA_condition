<div class="container">

  <h2 class="mt-5">新規会員登録</h2>
  
  <%= flash[:notice] %>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>
  
    <table cellpadding="10", style="font-size: 20px;">
      
      <tr>
        <th>
          会員名
        </th>
        <td>
          <%= f.text_field :customer_name, placeholder: '田中　太郎' %>
        </td>
      </tr>
      
      <tr>
        <th>
          メールアドレス
        </th>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sumple@example.com' %>
        </td>
      </tr>
    
  　　<tr>
  　　    <th>  
          パスワード（<%= @minimum_password_length %> 文字以上）
  　　    </th>
  　　    <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
  
      <tr>
        <th>
          パスワード確認
        </th>
        <td>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
  
      <tr><th></th><td><%= f.submit "新規登録", class:"btn btn-success" %></td></tr>
    
    </table>
  <% end %>
  
  <h4 class="mt-5">
    すでに登録済みの方は<br>
    <%= link_to "こちら", new_customer_session_path %>からログインしてください。
  </h4>
    

</div>



