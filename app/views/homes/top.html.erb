<div class="container">
  
  <h2 class="mt-5">新着更新情報</h2>
  
  <div class="d-flex">
    <% @ski_resorts.first(6).each do |ski_resort| %>
      <div class="my-5 mx-2">
        <%= link_to image_tag(ski_resort.image, size:"280x180"), ski_resort_path(ski_resort) %>
        <h5 class="mt-3"><%= ski_resort.name %> (<%= ski_resort.prefecture.prefecture_name %>)</h5>
      </div>
    <% end %>
  </div>
  
  <div class="mt-4 text-right">
    <%= link_to "すべてのスキー場を見る", customers_ski_resorts_path %>
  </div>
</div>
