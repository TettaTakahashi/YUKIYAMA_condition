<div class="container">
  
  <h2 class="my-5">会員一覧</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>会員名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.customer_name, admin_customer_path(customer), class:"text-body" %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
</div>